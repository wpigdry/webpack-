    },
    "homepage": "https://github.com/wpigdry/webpack-#readme",
    "devDependencies": {
      "webpack": "^5.73.0",
      "webpack-cli": "^4.10.0",
      "webpack-dev-server": "^4.9.2"
    }
  }
  